<%= render 'home/navbar' %>
<div class="container">
  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :title, class: "form-control",
      placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.text_area :text,
      rows: "20",
      placeholder: 'Content',
      :maxlength => 100000,
      class: "form-control" %>
    </div>

    <p>
      <%= form.submit 'Save article', class: "btn btn-primary"%>
    </p>

  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
