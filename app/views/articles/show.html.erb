<h2><%= @article.title %></h2>

<p><%= @article.text %></p>

<h4><em>By <%= User.find(@article.user_id).email %></em></h4>

<% like = @article.likes.find { |like| like.user_id == current_user.id} %>
<% if like %>
  <%= button_to 'Unlike', article_like_path(@article, like), method: :delete %>
<% else %>
  <%= button_to 'Like', article_likes_path(@article), method: :post %>
<% end %>

<p><%= @article.likes.count %> <%= (@article.likes.count) == 1 ? 'Like' : 'Likes'%></p>

<%= render 'comments/comment' %>

<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>
