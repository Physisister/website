<%= button_to 'Back', articles_path,
  method: :get,
  type: "button",
  class: "btn btn-primary",
  id: "back-button" %>

<div class="container">
  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
    <div class="form-group">
      <%= form.text_field :title, class: "form-control",
      placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.text_area :text,
      rows: "20",
      placeholder: 'Content',
      :maxlength => 100000,
      class: "form-control" %>
    </div>

    <p>
      <%= form.submit 'Save Article', class: "btn btn-primary"%>
    </p>

  <% end %>
</div>
