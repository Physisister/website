<%= render 'home/navbar' %>
<h1> Edit </h1>
<div class="container">
  <%= form_with model: @article, local: true do |form| %>

    <div class="form-group">
      <%= form.text_field :title, class: "form-control",
      placeholder: 'Title' %>
    </div>

    <div class="form-group">
      <%= form.text_area :text,
      rows: "20",
      placeholder: 'Content',
      :maxlength => 100000,
      class: "form-control" %>
    </div>

    <%= form.submit 'Save article', class: "btn btn-primary"%>

  <% end %>
  <%= link_to 'Back', articles_path %>
</div>
